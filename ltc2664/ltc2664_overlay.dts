/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835", "brcm,bcm2708", "brcm,bcm2709";
};

&spidev0 {
	status = "disabled";
};

&spi0 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	dac@0 {
		compatible = "adi,ltc2664";
		reg = <0>;
		spi-max-frequency = <1000000>;

                adi,manual-span-operation-config = <7>;

		#address-cells = <1>;
		#size-cells = <0>;

                channel@0 {
                        reg = <0>;
                        adi,toggle-mode;
                        adi,output-range-microvolt = <0 10000000>;
                };

                channel@1 {
                        reg = <1>;
                        adi,output-range-microvolt = <0 10000000>;
                };

                channel@2 {
                        reg = <2>;
                        adi,output-range-microvolt = <0 10000000>;
                };

                channel@3 {
                        reg = <3>;
                        adi,toggle-mode;
                        adi,output-range-microvolt = <0 10000000>;
                };

                // channel@4 {
                //         reg = <4>;
                //         // adi,toggle-mode;
                //         adi,output-range-microvolt = <0 10000000>;
                // };
	};
};
